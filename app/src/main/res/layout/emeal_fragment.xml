<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.soundsonic.simplemensa.ui.emeal.EmealViewModel" />
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.emeal.EmealFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="@{viewModel.balance == null ? View.GONE : View.VISIBLE}"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            style="@style/CardViewStyle"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:padding="5dp"
                android:text="@{@string/your_balance + ` ` +  viewModel.balance}"
                tools:text="Your balance: 3.50 â‚¬"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="@{viewModel.balance != null ? View.GONE : View.VISIBLE}"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            style="@style/CardViewStyle"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:padding="5dp"
                android:text="@string/set_up_emeal"
                tools:visibility="gone"
                />
        </androidx.cardview.widget.CardView>

    </FrameLayout>
</layout>
