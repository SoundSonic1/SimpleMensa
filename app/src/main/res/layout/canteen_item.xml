<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="canteen"
            type="com.soundsonic.simplemensa.data.model.Canteen" />

        <variable
            name="canteenHandler"
            type="com.soundsonic.simplemensa.ui.main.listener.CanteenHandler" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:onClick="@{() -> canteenHandler.onCanteenClicked(canteen)}"
        android:layout_margin="2dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        style="@style/CardViewStyle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="9dp"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/canteenImageView"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                >
            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mensaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="1dp"
                    android:text="@{canteen.name}"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/mensa_name"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mensaAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="1dp"
                    android:text="@{canteen.address}"
                    app:layout_constraintTop_toBottomOf="@+id/mensaName"
                    tools:text="@string/mensa_address"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
